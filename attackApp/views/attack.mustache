<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Network Attack Simulator</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-image: url('attackImage.jpeg');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            background-attachment: fixed;
        }

        .header {
            background-color: #2c3e50;
            color: #ecf0f1;
            padding: 10px 20px;
            text-align: center;
        }

        .dashboard {
            display: grid;
            grid-template-columns: 1fr 3fr;
            grid-gap: 20px;
            padding: 20px;
        }

        .sidebar {
            background-color: #34495e;
            color: #ecf0f1;
            padding: 20px;
        }

        .main-content {
            background-color: rgba(236, 240, 241, 0.8);
            padding: 20px;
            border-radius: 5px;
        }

        .card {
            background-color: #fff;
            padding: 20px;
            margin-bottom: 20px;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .card h3 {
            margin: 0;
            color: #2c3e50;
        }

        .sidebar ul {
            list-style: none;
            padding: 0;
        }

        .sidebar ul li {
            padding: 10px;
            border-bottom: 1px solid #455a64;
        }

        .sidebar ul li:last-child {
            border-bottom: none;
        }

        .sidebar ul li a {
            color: #ecf0f1;
            text-decoration: none;
        }

       
        .attack-form {
            background: #fff;
            padding: 20px;
            border-radius: 5px;
            margin-top: 20px;
        }

        .attack-form input,
        .attack-form select,
        .attack-form button {
            width: 100%;
            padding: 10px;
            margin: 10px 0;
            border-radius: 5px;
            border: 1px solid #ddd;
        }

        .attack-form button {
            background-color: #e74c3c;
            color: white;
            border: none;
            cursor: pointer;
        }

        .attack-form button:hover {
            background-color: #c0392b;
        }
    </style>
</head>

<body>
    <div class="header">
        <h1>Network Attack Simulation Portal</h1>
    </div>
    <div class="dashboard">
        <div class="sidebar">
            <h2>Menu</h2>
            <ul>
                <li><a href="/dashboard">Dashboard</a></li>
                <li><a href="/attack">Simulate Attack</a></li>
                <li><a href="#">Analytics</a></li>
                <li><a href="#">Settings</a></li>
            </ul>
        </div>
        <div class="main-content">
            <div class="attack-form">
                <h3>Simulate Network Attack</h3>
                <form id="attack-form" action="/attack" method="post">
                    <label for="attack-type">Attack Type:</label>
                    <select id="attack-type" name="attack-type">
                        <option disabled selected>Select Attack Type</option>
                        <option value="dos">Denial of Service</option>
                        <option value="mitm">Man In The Middle</option>
                        <option value="phishing">Phishing</option>
                        <option value="sql_injection">SQL Injection</option>
                        <option value="xss">Cross Site Scripting</option>
                        <option value="all">All Attack types</option>
                    </select>
                    <label for="target-ip">Target IP:</label>
                    <input type="text" id="target-ip" name="target-ip" placeholder="Enter target IP address" required>
                    <button type="submit">Initiate Attack</button>
                </form>
            </div>
            <!-- Example cards for other content -->
            <div class="card">
                <h3 id="response-title"></h3>
                <p id="response-content"></p>
            </div>
        </div>
    </div>
    <!-- Add your JavaScript here -->
    <script>
    document.getElementById('attack-form').onsubmit = function (e) {
            e.preventDefault(); // Prevents the default form submission

            var attackType = document.getElementById('attack-type').value;
            var targetIp = document.getElementById('target-ip').value;

            fetch('/attack', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    // Additional headers if needed
                },
                body: JSON.stringify({
                    attackType: attackType,
                    targetIp: targetIp
                })
            })
                .then(response => {
                    if (response.ok) {
                        return response.json(); // This assumes the response is JSON
                    } else {
                        throw new Error('Server returned non-JSON response.');
                    }
                })
                .then(data => {
                    // Handle the response data
                    console.log('Attack initiated:', data);
                    // Update the HTML elements with the response
                    document.getElementById('response-title').textContent = 'Response';
                    document.getElementById('response-content').textContent = data.message;
                })
                .catch((error) => {
                    // Handle any errors
                    console.error('Error:', error);
                });
        };


    </script>
</body>

</html>